<style>
  textarea  {
    resize:none;
    margin-bottom:20px;
  }
    .alert{
      text-align: center;
      font-size:30px;
      color:red;
    }
</style>

<% if user_signed_in? %>


<div class="container">
  <h2>글쓰기</h2>

<form method="post" action="/home/create" enctype="multipart/form-data">

  <div class="form-group">
    <label for="title">제목</label>
    <input type="text" class="form-control" name = "title" id="title" placeholder="title" required>
  </div>
  <div class = "form-group">
    <label for = 'content'>내용</label>
  <textarea name = 'content' id = 'content' class = 'form-control' rows="6" placeholder="내용을 입력해 주세요." required></textarea>
  </div>
  <div class="form-group">
    <label for="exampleInputFile">사진 첨부</label>
    <input type="file" name = "img" id="exampleInputFile">
  </div>
  <button type="submit" class="btn btn-default">글쓰기</button>
</form>


</div>

<% else %>
    <div class="container">

      <p class="alert"><%= flash[:alert] %></p>

    </div>
<% end %>